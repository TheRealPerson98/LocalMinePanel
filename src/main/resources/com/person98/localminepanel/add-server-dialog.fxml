<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.*?>
<?import java.lang.String?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.person98.localminepanel.AddServerDialogController">
    <VBox spacing="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <Label text="Add New Server" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <!-- Basic Settings -->
        <VBox spacing="5">
            <Label text="Server Type"/>
            <ComboBox fx:id="serverTypeComboBox" maxWidth="Infinity"/>
        </VBox>
        
        <VBox spacing="5">
            <Label text="Server Software"/>
            <ComboBox fx:id="serverSoftwareComboBox" maxWidth="Infinity"/>
        </VBox>
        
        <VBox spacing="5">
            <Label text="Server Name"/>
            <TextField fx:id="serverNameField" promptText="Enter server name"/>
        </VBox>

        <!-- Server Configuration -->
        <TitledPane text="Server Configuration" expanded="false">
            <VBox fx:id="serverConfigVBox" spacing="10"/>
        </TitledPane>

        <!-- Startup Configuration -->
        <TitledPane text="Startup Configuration" expanded="false">
            <VBox fx:id="startupConfigVBox" spacing="10"/>
        </TitledPane>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCancel"/>
            <Button text="Create" onAction="#handleCreate" defaultButton="true"/>
        </HBox>
    </VBox>
</ScrollPane> 