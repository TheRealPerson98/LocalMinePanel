<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.*?>
<?import java.lang.String?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.person98.localminepanel.AddServerDialogController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Add New Server" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <VBox spacing="5">
        <Label text="Server Type"/>
        <ComboBox fx:id="serverTypeComboBox" maxWidth="Infinity">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Bedrock"/>
                    <String fx:value="Java"/>
                    <String fx:value="Proxy"/>
                </FXCollections>
            </items>
        </ComboBox>
    </VBox>
    
    <VBox spacing="5">
        <Label text="Server Software"/>
        <ComboBox fx:id="serverSoftwareComboBox" maxWidth="Infinity"/>
    </VBox>
    
    <VBox spacing="5">
        <Label text="Server Name"/>
        <TextField fx:id="serverNameField" promptText="Enter server name"/>
    </VBox>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"/>
        <Button text="Create" onAction="#handleCreate" defaultButton="true"/>
    </HBox>
</VBox> 